config interface loopback
	option ifname	lo
	option proto	static
	option ipaddr	127.0.0.1
	option netmask	255.0.0.0

config interface 'h0'
       option ifname 'eth0'
       option proto  hnet
       option ping_interval 10

config interface 'h1'
       option ifname 'eth1'
       option proto  hnet
       option ping_interval 10

config interface 'h2'
       option ifname 'eth2'
       option proto  hnet
       option ping_interval 10

config interface 'h3'
       option ifname 'eth3'
       option proto  hnet
       option ping_interval 10
